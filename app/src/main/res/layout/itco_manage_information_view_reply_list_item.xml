<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/itco_manage_information_view_reply_list_item_replyer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="回复人" />

            <TextView
                android:id="@+id/itco_manage_information_view_reply_list_item_reply_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="回复内容" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/itco_manage_information_view_reply_list_item_downlayout"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="3dip"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/itco_manage_information_view_reply_list_item_path"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="..." />

            <Button
                android:id="@+id/itco_manage_information_view_reply_list_item_download_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/btn_border"
                android:focusable="false"
                android:textColor="#ffffff"
                android:text="@string/download_file"
                android:textSize="12sp"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>