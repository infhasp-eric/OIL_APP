<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_bg"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@color/title_bg" >

        <Button
            android:id="@+id/bt_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/bt_back"
            android:text="" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_search"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>
    
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/jichu_bg">
        <ImageView android:id="@+id/search_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/search"/>
     <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/search_pic"
        android:text="@string/search_hint" />
     <Button android:id="@+id/search_btn"
         android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:text="@string/title_search"
         android:textColor="@color/jichu_bg"
         android:layout_toLeftOf="@+id/reset_btn"
         android:layout_centerVertical="true"
         android:layout_marginRight="5dp"
         android:background="@drawable/btn_border"/>
     <Button android:id="@+id/reset_btn"
         android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:text="@string/search_clean"
         android:textColor="@color/jichu_bg"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:background="@drawable/btn_border"/>
	</RelativeLayout>
	
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:background="@color/jichu_bg"
        android:orientation="vertical">
        <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="18sp"
                android:text="@string/search_keyword" />
        
        <EditText android:id="@+id/search_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:inputType="text"
            android:padding="5dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/jichu_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="5dp"
                android:textSize="18sp"
                android:text="@string/search_start_date" />
            <TextView
                android:id="@+id/start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:padding="7dp"
                android:textSize="18sp" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:gravity="right"
                android:padding="5dp"
                android:textSize="18sp"
                android:text="@string/search_end_date" />
            <TextView
                android:id="@+id/end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:padding="7dp"
                android:textSize="18sp" />
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
