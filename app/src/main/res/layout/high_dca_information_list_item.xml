<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/jichu_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp" >

        <TextView
            android:id="@+id/high_dca_information_list_item_status"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_pass"
            android:gravity="center"
            android:padding="0dp"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/high_dca_information_list_item_create_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/timecolor"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp" >

        <TextView
            android:id="@+id/high_dca_information_list_item_pl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingBottom="5dip"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:text="@string/belongto_pipe"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/text_bg" />

</LinearLayout>