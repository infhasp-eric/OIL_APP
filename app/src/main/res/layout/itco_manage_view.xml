                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txt_link_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                             android:textColor="#000000"
                            android:textSize="18sp" />
                    </LinearLayout>
                    
                    <!-- 职务 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/jichu_bg"
                        android:padding="10dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="@string/one_post"
                             android:textColor="#000000"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txt_link_duty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                             android:textColor="#000000"
                            android:textSize="18sp" />
                    </LinearLayout>
                    
                    <!-- 联系方式 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/jichu_bg"
                        android:padding="10dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="@string/one_relation"
                             android:textColor="#000000"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txt_link_method"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                             android:textColor="#000000"
                            android:textSize="18sp" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/jichu_bg"
                        android:padding="10dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="@string/one_owner"
                             android:textColor="#000000"
                            android:textSize="18sp" />

                    </LinearLayout>
                    <!-- 名称 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/jichu_bg"
                        android:padding="10dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="@string/one_institution"
