<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@color/title_bg"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/high_dca_information_create_next_back_btn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/bt_back"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/dynamic_high_resource"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/high_dca_information_create_next_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="@string/save"
            android:textColor="@color/jichu_bg"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1" >

                <TableRow
                    android:layout_marginTop="2dip"
                    android:background="@color/jichu_bg" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="5dip"
                        android:text="@string/high_manager"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/high_dca_information_create_next_manager"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="text"
                        android:maxLength="20"
                        android:padding="5dip"
                        android:singleLine="true"
                        android:textSize="18sp" />
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:background="@color/jichu_bg"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:padding="5dip"
                        android:text="@string/high_manger_phone"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/high_dca_information_create_next_manager_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="phone"
                        android:maxLength="20"
                        android:padding="5dip"
                        android:singleLine="true"
                        android:textSize="18sp" />
                </LinearLayout>

                <TableRow
                    android:layout_marginTop="5dp"
                    android:background="@color/jichu_bg" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip"
                        android:text="@string/manage_unit"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/high_dca_information_create_next_MAMPU"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:inputType="textMultiLine"
                        android:padding="5dip"
                        android:maxLength="50"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_marginTop="2dip"
                    android:background="@color/jichu_bg" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="5dip"
                        android:text="@string/pipe_name"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/high_dca_information_create_next_pl_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:inputType="text"
                        android:maxLength="20"
                        android:padding="5dip"
                        android:singleLine="true"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_marginTop="2dip"
                    android:background="@color/jichu_bg" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="5dip"
                        android:text="@string/paragragh_name"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/high_dca_information_create_next_pl_section"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:inputType="text"
                        android:padding="5dip"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:textSize="18sp" />
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:background="@color/jichu_bg"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:padding="5dip"
                        android:text="@string/static_high_number"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/high_dca_information_create_next_HC_numb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="number"
                        android:padding="5dip"
                        android:singleLine="true"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/jichu_bg"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:padding="5dip"
                        android:text="@string/high_start"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/high_dca_information_create_next_HC_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="number"
                        android:padding="5dip"
                        android:singleLine="true"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:background="@color/jichu_bg"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:padding="5dip"
                        android:text="@string/high_end"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/high_dca_information_create_next_HC_end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="number"
                        android:padding="5dip"
                        android:singleLine="true"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:background="@color/jichu_bg"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:padding="5dip"
                        android:text="@string/high_length"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/high_dca_information_create_next_HC_long"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="numberDecimal"
                        android:padding="5dip"
                        android:singleLine="true"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:background="@color/jichu_bg"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip"
                        android:text="@string/high_position"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/high_dca_information_create_next_HC_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="textMultiLine"
                        android:maxLength="100"
                        android:padding="5dip"
                        android:textSize="18sp" />
                </LinearLayout>

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:background="@color/jichu_bg"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dip"
                        android:text="@string/high_feature"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/high_dca_information_create_next_HC_signalment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/multi_edittext_border"
                        android:gravity="top|left"
                        android:inputType="textMultiLine"
                        android:maxLength="255"
                        android:padding="5dip"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/jichu_bg"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dip"
                        android:text="@string/remarker"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/high_dca_information_create_next_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/multi_edittext_border"
                        android:maxLength="255"
                        android:inputType="textMultiLine"
                        android:layout_margin="5dp"
                        android:padding="5dip"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/jichu_bg"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:padding="5dip"
                        android:text="@string/recognition_update_time"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:clickable="true"
                        android:focusable="true"
                        android:hint="@string/choose_update_time"
                        android:maxLines="1"
                        android:padding="5dip"
                        android:textSize="18sp" />
                </LinearLayout>

                <TableRow
                    android:layout_marginTop="2dp"
                    android:background="@color/jichu_bg" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:padding="5dip"
                        android:text="@string/add_file"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/high_dca_information_create_next_filepath"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:hint="@string/choose_file"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textSize="18sp" />
                </TableRow>
            </TableLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                    <Button
                        android:id="@+id/high_dca_information_create_next_add"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_border"
                        android:text="@string/add"
                        android:textColor="@color/jichu_bg"
                        android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>