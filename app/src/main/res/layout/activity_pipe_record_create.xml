<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jichu_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@color/title_bg" >

        <TextView
            android:id="@+id/name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/jichuziliao1_text1"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/back_create"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/bt_back"
            android:text="" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/choose_pipe_info"
                android:textSize="18sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_bg"
                android:paddingTop="3dp"
                android:stretchColumns="1" >

                <TableRow
                    android:background="@color/jichu_bg"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:padding="5dp"
                        android:text="@string/pipe_name"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/edittext_border"
                        android:orientation="horizontal"
                        android:padding="5dp" >

                        <Spinner
                            android:id="@+id/pipe_create"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/jichu_bg" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:background="@color/jichu_bg"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:padding="5dp"
                        android:text="@string/start_end_paragragh"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/edittext_border"
                        android:orientation="horizontal"
                        android:padding="5dp" >

                        <Spinner
                            android:id="@+id/para_create"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/jichu_bg" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:background="@color/jichu_bg"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:padding="5dp"
                        android:text="@string/pipe_specification"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/edittext_border"
                        android:orientation="horizontal"
                        android:padding="5dp" >

                        <Spinner
                            android:id="@+id/spec_create"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/jichu_bg" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:background="@color/jichu_bg"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="5dp"
                        android:text="@string/must_well_station"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/well_create"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/edittext_border"
                        android:inputType="text"
                        android:maxLength="50"
                        android:padding="7dp"
                        android:singleLine="true"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/protect_row"
                    android:background="@color/jichu_bg"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="5dp"
                        android:text="@string/protect_station"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/pipe_polling_protect_well"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/edittext_border"
                        android:inputType="text"
                        android:maxLength="50"
                        android:padding="7dp"
                        android:singleLine="true"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:background="@color/jichu_bg"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="5dp"
                        android:text="@string/record_time"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/record_create"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/edittext_border"
                        android:hint="@string/test_date"
                        android:padding="7dp"
                        android:singleLine="true"
                        android:textSize="18sp" />
                </TableRow>
            </TableLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/next_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_border"
                    android:text="@string/next_step"
                    android:textColor="@color/jichu_bg"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>